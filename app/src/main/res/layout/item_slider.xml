<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
            <variable
                name="sliderItem"
                type="com.sesootweb.sesootwebapp.sliderSetting.model.SliderItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imv_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/ic_se_soot_web_logo"
            loadImage="@{sliderItem.sliderImg}"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_slider_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{sliderItem.sliderTxt}"
            tools:text="به دنیای هوشمند خدمات دیجیتال سه سوت وب خوش آمدید"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center" />

    </LinearLayout>
</layout>